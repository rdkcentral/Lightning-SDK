  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-parameters": "^7.10.5 ",
    "@babel/plugin-transform-spread": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^1.19.1",
    "rollup": "^1.32.1",
    "rollup-plugin-babel": "^4.4.0"
